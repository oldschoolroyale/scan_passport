<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_input_horizontal"
    android:paddingTop="@dimen/margin_input_vertical"
    android:paddingRight="@dimen/margin_input_horizontal"
    android:paddingBottom="@dimen/margin_input_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ProgressBar
        android:id="@+id/mrtdProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:progress="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mrtdProgressBar"
        android:layout_alignEnd="@+id/mrtdProgressBar"
        android:layout_alignRight="@+id/mrtdProgressBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:text="Reading passport"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>